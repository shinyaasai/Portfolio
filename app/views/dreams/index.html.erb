<% @records.each do |dream| %>
<% if dream.dream_post.present? %>
<% user = dream.user %>
<div class="card">
  <div class="card-header font-weight-bold">
    <%= user.user_name %>
  </div>
  <div class="card-body text-left">
    <%= truncate(dream.memo, length: 80) do %>
    <%= link_to "続きを見る", dream_path(id: dream.id) %>
    <% end %>
  </div>
</div>
<% end %>
<% end %>
