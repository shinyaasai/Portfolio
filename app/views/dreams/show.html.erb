<% provide(:title, "#{@user_name}さんの夢") %>
<div class="dream-detail">
  <div class="card">
    <div class="card-header font-weight-bold">
      <%= @user_name %><span><%= @record.sleep_time.to_s(:date_jp) %></span>
      <% @record.tags.each do |tag| %>
      <div class="badge badge-primary"><%= tag.name %></div>
      <% end %>
    </div>
    <div class="card-body text-left">
      <%= @record.memo %>
    </div>
  </div>
</div>
<div class="row actions" id="comment-form-post-<%= @record.id.to_s %>">
  <%= form_with model: [@record, Comment.new], class: "w-100" do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :record_id, value: @record.id %>
  <%= f.text_field :comment, class: "form-controlo comment-input border-0", placeholder: "コメント...", autocomplete: :off %>
  <%= f.submit '送信', class: "btn btn-primary" %>
  <% end %>
</div>
<div id="comment-post-<%= @record.id.to_s %>">
<%= render 'comment_list', record: @record %>
</div>
