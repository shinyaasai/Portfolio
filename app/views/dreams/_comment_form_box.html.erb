<div class="comment_form_box">
  <div class="form-group" id="comment-form-post-<%= record.id.to_s %>">
    <%= form_with model: [record, Comment.new], class: "w-100" do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :record_id, value: record.id %>
      <%= f.text_field :comment, class: "form-control mt-2", placeholder: "コメント...", autocomplete: :off %>
    <% end %>
  </div>
</div>
