<%= render 'layouts/error_messages' %>
<div class="record-label">
  <span><i class="far fa-moon"></i>寝た時のこと</span>
</div>
<%= form_for @record , url: form2_records_path, method: :get do |f| %>
  <%= f.hidden_field :user_id %>
  <div class= "form-label">
    <%= f.label :sleep_time,"何時に布団に入った?", class: "control-label label-text" %><br>
    <%= f.datetime_select :sleep_time,discard_year:true, use_month_numbers:true, class: "form-control form-control-inline"%></br>
  </div>
  <div class= "form-label">
    <%= f.label :medicine,"寝るための薬は飲みましたか？", class: "label-text" %><br>
    <%= f.select :medicine, options_for_select({飲んだ: "飲んだ", 飲んでいない: "飲んでいない"}), prompt: "選択してください"%></br>
  </div>
  <div class="record-label">
    <span><i class="far fa-moon"></i>夜中のこと</span>
  </div>
  <div class= "form-label">
    <%= f.label :awakening,"途中で目が覚めた?", class: "label-text" %><br>
    <%= f.select :awakening, options_for_select({起きた: "起きた" , 起きていない: "起きていない"}), prompt: "選択してください"%></br>
  </div>
  <div class="text-center">
    <%= f.submit '次へ', class: "btn btn-outline-dark btn-next " %>
  </div>
<% end %>
