<%= form_with url: records_path, method: :get, local: true do |f| %>
<div class="form-group" %>
<%= f.label :Serch %>
<%= f.date_field :search %>
</div>
<%= f.submit "Search", class: "btn btn-outline-dark", name: nil %>
<% end %>





<div class="d-flex align-items-center">
  <h1>睡眠記録</h1>
</div>
<table class="table table-hover boards__table center">
  <thead class="thead-light">
    <tr>
      <th>作成日</th>
      <th>就寝時間</th>
      <th>起床時間</th>
      <th>睡眠時間</th>
      <th>夜中に目が覚めた</th>
      <th>薬を飲んだ</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.created_at.to_s(:date_jp) %></td>
        <td><%= record.sleep_time.to_s(:datetime_jp)%></td>
        <td><%= record.getup_time.to_s(:datetime_jp)%></td>
        <td>約<%=(( record.getup_time -  record.sleep_time) / 3600).to_f.floor(1) %> 時間</td>
        <td><%= record.awakening %></td>
        <td><%= record.medicine %></td>
      </tr>
    <% end %>
  </tbody>
</table>