<div class="record-label">
  <span><i class="fas fa-sticky-note"></i>夢日記</span>
</div>
<div class="row">
  <div class= "col-md-6">
    <%= form_for @record, url: records_path, metho: :post do |f| %>
    <%= f. hidden_field :user_id %>
    <div class= "form-label form-group">
      <%= f.label :memo,"夢を記録しよう！", class: "label-text" %><br>
      <%= f.text_area :memo, class: "form-control"%></br>
    </div>
    <div class="form-group">
      <span>タグ</span>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class="form-check">
        <%= tag.label class:'form-check-label' do %>
        <%= tag.check_box class: 'form-check-input' %>
        <%= tag.text %>
        <% end %>
      </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= f.submit '登録', class: "btn btn-outline-dark btn-next" %>
    </div>
    <% end %>
  </div>
</div>
