<%= form_with model: @record do |f| %>
<%= f.label :sleep_time,"昨日は何時に寝ました?" %>
<%= f.time_select :sleep_time%></br>
<%= f.label :getup_time,"今日は何時に起きましたか?" %>
<%= f.time_select :getup_time%></br>
<%= f.label :目覚め %><br />
<%= f.label :good %>
<%= f.radio_button :awakening, :good %>
<%= f.label :normal %>
<%= f.radio_button :awakening, :normal %>
<%= f.label :bad %>
<%= f.radio_button :awakening, :bad %><br />
<%= f.submit "記録する", class: "btn btn-outline-dark" %>
<% end %>